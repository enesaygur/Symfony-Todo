{% extends 'base.html.twig' %}

{% block title %}Add Todo{% endblock %}

{% block body %}
    <div class="card shadow p-4">
        <h1 class="text-primary">Add New Todo</h1>
        
        {{ form_start(form, {'attr': {'class': 'mt-3'}}) }}
            <div class="mb-3">
                {{ form_label(form.title, 'Todo Title:', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.title) }}
            </div>
            {{ form_widget(form.save) }}
        {{ form_end(form) }}

        <br>
        <a href="{{ path('todos_list') }}" class="btn btn-secondary mt-3">Back to List</a>
    </div>
{% endblock %}
